# Telegram bot token (get from @BotFather)
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# Admin user IDs (comma separated, no spaces)
ADMIN_IDS=123456789,987654321

# Database URL (SQLite for local, PostgreSQL for production)
# SQLite: sqlite+aiosqlite:///connectprobot.db
# PostgreSQL: postgresql+asyncpg://user:password@host:port/dbname
DATABASE_URL=sqlite+aiosqlite:///connectprobot.db

# Payment webhook secret (change this!)
PAYMENT_SECRET=your_secure_secret_here

# Payment gateway URL
PAYMENT_GATEWAY_URL=https://payments.example.com

# Service API for mini-bot creation (optional)
SERVICE_API_URL=https://your-service.example.com/api
SERVICE_API_KEY=your_service_key
